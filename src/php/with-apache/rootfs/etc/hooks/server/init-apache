#!/usr/bin/env bash
################################################################################
#     These setups are part of the project: https://code.shin.company/php
#     Please respect the intellectual effort that went into creating them.
#     If you use or copy these ideas, proper credit would be appreciated.
#      - Author:  Mai Nhut Tan <shin@shin.company>
#      - License: https://code.shin.company/php/blob/main/LICENSE
################################################################################
export APACHE_PID="${APACHE_PID:-/run/apache2.pid}"

if [ -f /etc/apache2/envvars ]; then source /etc/apache2/envvars; fi

if [ -n "$PHP_MAX_EXECUTION_TIME" ] && [ "$PHP_MAX_EXECUTION_TIME" -gt "0" ]; then
    echo "
Timeout ${PHP_MAX_EXECUTION_TIME}
<IfModule proxy_module>
    ProxyTimeout ${PHP_MAX_EXECUTION_TIME}
</IfModule>
" >/etc/apache2/mods-enabled/timeout.conf
fi

web-mkdir "$APACHE_LOG_DIR" "$APACHE_LOCK_DIR" "$APACHE_RUN_DIR"
web-chown fix \
    "$APACHE_LOG_DIR" "$APACHE_LOCK_DIR" "$APACHE_RUN_DIR" \
    /var/lib/apache2 /var/log/apache2 /run/apache2

if is-true "$ENABLE_TUNING_MPM"; then
    debug-echo -i "Tune Apache MPM."
    apache-mpm
fi

if is-debug; then
    apache-conf 'LogLevel' 'debug'
    debug-echo -w "ðŸž Apache is in DEBUG MODE ðŸž"
    apache2 -S
else
    apache-conf 'LogLevel' '${APACHE_LOG_LEVEL}'
fi

if ! is-true "$DISABLE_GREETING"; then
    apache2 -v 2>&1
fi

exec with-env apache2 -t
