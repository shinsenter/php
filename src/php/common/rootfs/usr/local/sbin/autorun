for dir; do
    if [ -d "$dir" ]; then
        web-debug "\n\nðŸ”Ž Scanning autorun scripts in $dir"
        find $dir -type f -name '*.sh' | xargs -r chmod +x 2>&1 >/dev/null

        for script in $(find $dir -type f -perm -111 | sort -n); do
            if [ -x "$script" ]; then
                web-debug "ðŸš€ Autorun $script"
                with-env sh "$script"
            fi
        done
    fi
done
