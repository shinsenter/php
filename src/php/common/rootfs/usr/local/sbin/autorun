run_cmd() {
    debug-echo "\nAutorun script $1"
    with-env "$@"
}

for dir; do
    if [ ! -z "$dir" ] && [ -e "$dir" ]; then
        dir="$(realpath -s $dir)"
        if [ -d "$dir" ]; then
            find $dir -type f -name '*.sh' | xargs -r chmod +x &>/dev/null
            if has-cmd run-parts; then
                with-env run-parts --new-session "$dir";
            else
                for script in $(find $dir -type f -perm -111 | sort -dbfi); do
                    if [ -x "$script" ]; then
                        run_cmd "$script"
                    fi
                done
            fi
        elif [ -x "$dir" ]; then
            run_cmd "$dir"
        fi
    fi
done
