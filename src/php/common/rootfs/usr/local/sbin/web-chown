del_flg=/etc/.fix-ownership

case "$1" in
fix)
    shift

    if [ $# -eq 0 ]; then
        rm -rf $del_flg
        set -- "$(app-path)"
    fi

    for target; do
        if [ ! -z "$target" ] && [ -e "$target" ]; then
            debug-echo "Fix ownership for $target"
            chown -R "$APP_USER:$APP_GROUP" "$target" 2>&1 || true
        fi
    done
    ;;
path)
    echo $del_flg
    ;;
*)
    touch $del_flg
    if [ ! -z "$@" ]; then debug-echo "$@"; fi
    ;;
esac
