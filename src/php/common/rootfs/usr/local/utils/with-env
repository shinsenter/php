#!/usr/bin/env sh
################################################################################
#     These setups are part of the project: https://code.shin.company/php
#     Please respect the intellectual effort that went into creating them.
#     If you use or copy these ideas, proper credit would be appreciated.
#      - Author:  Mai Nhut Tan <shin@shin.company>
#      - License: https://code.shin.company/php/blob/main/LICENSE
################################################################################
SYSTEM_ENV="/etc/environment"
DEFAULT_ENV="$(env-path @)"

print_env() {
    # print environment variables sorted, excluding the special _= variable
    env -0 | awk -v RS='\0' '!/^_=/ {print}' | sort -df
}

safe_source() {
    local file="$1"
    # only source if the file exists and is not this script itself
    [ -f "$file" ] && [ "$file" != "${BASH_SOURCE[0]:-$0}" ] && source "$file" &>/dev/null
}

# load system environment variables
if [ -f "$SYSTEM_ENV" ]; then
    set -a
    source "$SYSTEM_ENV" &>/dev/null
    set +a
fi

# load default env and user env if different
safe_source "$DEFAULT_ENV"
[ -n "$ENV" ] && [ "$ENV" != "$DEFAULT_ENV" ] && safe_source "$ENV"

if [ "$#" -eq 0 ]; then
    # no arguments, print environment variables
    print_env | debug-echo -l
else
    # if first argument is "@", save environment for other processes
    if [ "$1" = "@" ]; then
        mkdir -pm 0755 /etc/default
        print_env > /etc/default/locale
        shift
    fi

    # execute the given command
    if [ "$#" -gt 0 ]; then
        export APP_PATH="$(app-path)"
        export APP_ROOT="$(app-root)"
        exec "$@"
    fi
fi
