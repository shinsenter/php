set -- with-env "$@"

# switch user:group and exec
if has-cmd su-exec; then
    exec su-exec "$APP_USER:$APP_GROUP" "$@"
else
    exec chroot --userspec="$APP_USER:$APP_GROUP" / "$@"
fi
