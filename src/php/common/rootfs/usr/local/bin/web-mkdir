for dir; do
    shift
    if [ ! -z "$dir" ] && [ ! -f "$dir" ]; then
        mkdir -p "$dir"
        chown "$APP_USER:$APP_GROUP" "$dir"
        chmod g+s "$dir"
    fi
done
