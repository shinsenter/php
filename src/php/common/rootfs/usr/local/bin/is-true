if [ $# -eq 0 ]; then exit 1; fi

case "$(echo "$1" | tr '[:upper:]' '[:lower:]')" in
    ''|'false'|'none'|'null'|'off'|'undefined'|0|false|no)
        exit 1 ;;
    *)  exit 0 ;;
esac
