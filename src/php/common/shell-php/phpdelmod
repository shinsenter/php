if [ -d "${PHP_INI_DIR}/conf.d" ]; then
    while [[ $# -gt 0 ]]; do
        MODULE="$1"
        PATTERN="/^extension *= *$MODULE/s/^/;/g"
        shift
        debug-echo -e "Disable PHP module $MODULE"
        sed -i "$PATTERN" "${PHP_INI_DIR}/conf.d"/*.ini
    done
fi
