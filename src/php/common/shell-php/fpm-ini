conf_dir="${PHP_INI_DIR}-fpm.d"
disable="$([ "${1:0:1}" = ";" ] && echo "; " || echo "")"
name="${1/;/}"; shift

if [ -d $conf_dir ]; then
    set -e
    if [ "$name" = "pool_name" ]; then
        grep -lr '^\[\(www\|\$.*\)\]' $conf_dir | xargs -r sed -i "s#^\\[\\(www\\|\\$.*\\)\\]#[$@]#g"
    else
        grep -lr "^;* *${name} *=.*\$" $conf_dir | xargs -r sed -i "s#^;* *${name} *=.*\$#${disable}${name} = $@#g"
    fi
fi
