set -e

# enable debug logs
if is-debug; then
    roadrunner-conf 'debug' 'true'
    debug-echo -w "ðŸž RoadRunner is in DEBUG MODE ðŸž"
else
    roadrunner-conf 'debug' 'false'
fi

if ! is-true $DISABLE_GREETING && has-cmd rr; then
    rr -v 2>&1 | head -n1
fi
