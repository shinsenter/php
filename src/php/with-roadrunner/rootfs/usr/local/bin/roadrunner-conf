conf_dir="$(app-path)"
disable="$([ "${1:0:1}" = "#" ] && echo "# " || echo "")"
name="${1/#/}"; shift
if [ -d $conf_dir ]; then
    grep -lr "^ *#* *${name}: " $conf_dir | grep '.rr.yaml$' | xargs -r sed -i "s~^\( *\)#* *${name}: *.*\$~\1${disable}${name}: $@~g" 2>&1 >/dev/null
fi
