ENV NGINX_PID=/run/nginx.pid

# Install Nginx
RUN <<'EOF'
echo 'Install Nginx'

set -e

# install nginx
pkg-add nginx

# clean up
rm -rf /var/www/localhost \
    /etc/init.d/nginx* \
    /etc/ssl/nginx* \
    /etc/nginx/nginx.conf \
    /etc/nginx/http.d \
    /etc/nginx/modules-* \
    /etc/nginx/sites-* \
    /etc/nginx/conf-* \
    $APP_PATH/*
EOF
