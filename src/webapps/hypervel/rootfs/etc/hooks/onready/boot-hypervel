#!/usr/bin/env sh
debug-echo "Your application path is at ${APP_PATH}."

nginx_conf=/etc/nginx/sites-enabled/00-default.conf
port="$HTTP_SERVER_PORT"
if ! [[ "$port" =~ ^[0-9]+$ ]]; then
    port=9501
fi

if [ -f "$nginx_conf" ]; then
    sed -E -i \
        -e "s~(proxy_pass +http://127\\.0\\.0\\.1:)[0-9]+;~\1${port};~" \
        "$nginx_conf"
fi
