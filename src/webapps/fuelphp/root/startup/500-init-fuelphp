#!/command/with-contenv bash
FUEL_PROJECT="${FUEL_PROJECT:-fuel/fuel}"
FUEL_ROOT="$(webhome)"
FUEL_CHECK="$FUEL_ROOT/fuel/app"

if [ ! -d "$FUEL_CHECK" ]; then
    echo; echo "ðŸ¤– Installing $FUEL_PROJECT from scratch"
    rm -rf $FUEL_ROOT/public $FUEL_ROOT/index.*
    wdo composer-create -d $FUEL_ROOT/ $FUEL_PROJECT $FUEL_ROOT/
    wmd $FUEL_ROOT -R
fi